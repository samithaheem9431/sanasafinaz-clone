<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add New Product</title>
    
    <style>
        body {
            background-color: #f4f6f9;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .card-form {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 12px;
            background-color: white;
            padding: 30px;
            margin-top: 50px;
            transition: all 0.3s ease;
        }

        .card-form:hover {
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.15);
            transform: translateY(-5px);
        }

        .form-label {
            font-weight: 600;
            color: #495057;
        }

        .form-control {
            border-radius: 8px;
            padding: 10px 15px;
        }

        .btn-custom {
            background-color: #17a2b8;
            color: white;
            border-radius: 8px;
            padding: 10px 20px;
            transition: all 0.3s ease;
        }

        .btn-custom:hover {
            background-color: #138496;
            transform: scale(1.05);
        }

        .form-check-input:checked {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .custom-file-input {
            position: relative;
            overflow: hidden;
        }

        .custom-file-input input[type=file] {
            font-size: 100px;
            position: absolute;
            left: 0;
            top: 0;
            opacity: 0;
        }

        .custom-file-input .file-label {
            border: 1px solid #ced4da;
            display: inline-block;
            padding: 10px 15px;
            cursor: pointer;
            border-radius: 8px;
            width: 100%;
            text-overflow: ellipsis;
            white-space: nowrap;
            overflow: hidden;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card-form">
                    <h2 class="text-center mb-4">
                        <i class="fas fa-box-open me-2"></i>Add New Product
                    </h2>
                    <form method="post" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="productTitle" class="form-label">
                                <i class="fas fa-tag me-2"></i>Product Title
                            </label>
                            <input type="text" id="productTitle" name="title" class="form-control" required
                                minlength="3" maxlength="100" placeholder="Enter product name">
                            <div class="invalid-feedback">
                                Product title must be between 3 and 100 characters.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="productDescription" class="form-label">
                                <i class="fas fa-comment-dots me-2"></i>Description
                            </label>
                            <textarea id="productDescription" name="description" class="form-control" rows="4" required
                                minlength="10" maxlength="500"
                                placeholder="Provide a detailed product description"></textarea>
                            <div class="invalid-feedback">
                                Description must be between 10 and 500 characters.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="productPrice" class="form-label">
                                <i class="fas fa-dollar-sign me-2"></i>Price
                            </label>
                            <div class="input-group">
                                <input type="number" id="productPrice" name="price" class="form-control" required
                                    min="0" placeholder="0.00">
                            </div>
                            <div class="invalid-feedback">
                                Please enter a valid price.
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="productImage" class="form-label">
                                <i class="fas fa-image me-2"></i>Product Image
                            </label>
                            <div class="custom-file-input">
                                <input type="file" id="productImage" name="file" accept="image/*" class="form-control">
                                <label class="file-label" for="productImage">
                                    Choose image 
                                </label>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">
                                <i class="fas fa-star me-2"></i>Featured Product
                            </label>
                            <div class="d-flex">
                                <label class="form-check-label" for="featuredNo">
                                    isFeatured
                                </label>
                                
                                <input type="checkbox" id="featuredNo" name="isFeatured" class="form-check-input">
                                
                            </div>
                        </div>

                        <div class="mb-3">
                            <label for="category" class="form-label">
                                <i class="fas fa-folder me-2"></i>Category
                            </label>
                            <select id="category" name="category" class="form-control" required>
                                <option value="">Select a category</option>
                                <% categories.forEach(category => { %>
                                    <option value="<%= category._id %>"><%= category.categoryName %></option>
                                <% }) %>
                            </select>
                            <div class="invalid-feedback">
                                Please select a category.
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-custom w-100">
                                <i class="fas fa-plus me-2"></i>Add Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Optional: JavaScript to show selected filename
        document.getElementById('productImage').addEventListener('change', function(e) {
            var fileName = e.target.files[0] ? e.target.files[0].name : 'Choose image';
            var label = document.querySelector('.file-label');
            label.textContent = fileName;
        });
    </script>
</body>
</html>