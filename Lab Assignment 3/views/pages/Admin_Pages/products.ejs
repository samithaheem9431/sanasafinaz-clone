<h3>Products</h3>
<a href="/admin/products/create" class="btn btn-info mb-3">Create New Product</a>

<table class="table table-hover table-striped">
    <thead>
        <tr>
            <th>_id</th>
            <th>Title</th>
            <th>Description</th>
            <th>Price</th>
            <th>Quantities</th>
            <th>Is Featured</th>
            <th>Picture</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% for(let i=0; i < products.length ; i++ ){  %>
            <tr>
                <td><%= products[i]._id %></td>
                <td><%= products[i].title %></td>
                <td><%= products[i].description %></td>
                <td><%= products[i].price %></td>
                <td>
                    S: <%= products[i].quantities.small %><br>
                    M: <%= products[i].quantities.medium %><br>
                    L: <%= products[i].quantities.large %>
                </td>
                <td><%= products[i].isFeatured %></td>
                <td><img src="/<%= products[i].picture %>" width="80px"/> </td>
                <td>
                    <a href="/admin/products/edit/<%= products[i]._id %>" class="btn btn-primary">Edit</a>
                    <a href="/admin/products/delete/<%= products[i]._id %>" class="btn btn-dark">Del</a>
                </td>
            </tr>
        <% } %>
    </tbody>
</table>

<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <% if (hasPrevPage) { %>
            <li class="page-item">
                <a class="page-link" href="/admin/products?page=<%= currentPage - 1 %>">Previous</a>
            </li>
        <% } %>
        
        <% for(let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="/admin/products?page=<%= i %>"><%= i %></a>
            </li>
        <% } %>
        
        <% if (hasNextPage) { %>
            <li class="page-item">
                <a class="page-link" href="/admin/products?page=<%= currentPage + 1 %>">Next</a>
            </li>
        <% } %>
    </ul>
</nav>
