.cv-container {
    display: grid;
    grid-template-columns: 350px 1fr;
    min-height: 100vh;
}

/* Sidebar Styles */
.sidebar {
    background: #112240;
    padding: 40px;
    position: fixed;
    width: 350px;
    height: 100vh;
    overflow-y: auto;
}

.profile-section {
    text-align: center;
    margin-bottom: 40px;
}

.profile-container {
    position: relative;
    width: 200px;
    height: 200px;
    margin: 0 auto 20px;
}

.profile-border {
    position: absolute;
    top: -10px;
    left: -10px;
    right: -10px;
    bottom: -10px;
    border: 2px solid #64ffda;
    border-radius: 50%;
    animation: rotate 10s linear infinite;
}

@keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
}

.profile-pic {
    width: 200px;
    height: 200px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #233554;
    cursor: pointer;
    transition: transform 0.3s ease;
}

.profile-pic:hover {
    transform: scale(1.05);
}

.name {
    color: #ccd6f6;
    font-size: 2em;
    margin: 20px 0 10px;
}

.title {
    color: #64ffda;
