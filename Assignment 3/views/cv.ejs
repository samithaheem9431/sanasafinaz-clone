}

.floating-intro {
    display: none;
    position: fixed;
    top: 20px;
    right: 20px;
    width: 300px;
    background: #112240;
    padding: 20px;
    border-radius: 10px;
    border: 1px solid #64ffda;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    z-index: 1000;
    color: #ccd6f6;
    animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
    from {
        transform: translateX(50px);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

section {
    margin-bottom: 60px;
}

.section-title {
    color: #ccd6f6;
    font-size: 1.8em;
    margin-bottom: 30px;
    display: flex;
    align-items: center;
}

.section-title::before {
    content: '';
    display: inline-block;
    width: 50px;
    height: 2px;
    background: #64ffda;
    margin-right: 20px;
}

.experience-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 30px;
}

.experience-card {
    background: #112240;
    padding: 25px;
    border-radius: 10px;
    transition: transform 0.3s ease;
    cursor: pointer;
    border: 1px solid #233554;
}

.experience-card:hover {
    transform: translateY(-5px);
    border-color: #64ffda;
}

.experience-card h3 {
    color: #64ffda;
    margin-bottom: 10px;
}

.experience-card .date {
    color: #ccd6f6;
    font-size: 0.9em;
    margin-bottom: 15px;
}

.skills-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
    gap: 20px;
}

.skill-item {
    background: #112240;
    padding: 15px;
    border-radius: 10px;
    text-align: center;
    transition: transform 0.3s ease;
    border: 1px solid #233554;
}

.skill-item:hover {
    transform: translateY(-3px);
    border-color: #64ffda;
}

.skill-name {
    color: #ccd6f6;
    margin-bottom: 10px;
}

.skill-level {
    width: 100%;
    height: 6px;
    background: #233554;
    border-radius: 3px;
    overflow: hidden;
}

.skill-progress {
    height: 100%;
    background: #64ffda;
    border-radius: 3px;
    transition: width 1s ease;
}

.education-timeline {
