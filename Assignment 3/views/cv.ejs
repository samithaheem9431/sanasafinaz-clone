.education-item::before {
    content: '';
    position: absolute;
    left: -30px;
    top: 50%;
    width: 15px;
    height: 15px;
    background: #64ffda;
    border-radius: 50%;
    transform: translateY(-50%);
}

.education-item::after {
    content: '';
    position: absolute;
    left: -23px;
    top: 0;
    bottom: -30px;
    width: 1px;
    background: #64ffda;
}

.education-item:last-child::after {
